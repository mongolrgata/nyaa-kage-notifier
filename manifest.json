{
  "manifest_version": 2,
  "name": "nyaa-kage-notifier",
  "description": "TODO",
  "version": "0.2",
  "page_action": {
    "default_icon": "images/38.png",
    "default_title": "nyaa-kage-notifier"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": ["http://www.fansubs.ru/*"],
      "js": [
        "sources/external/jquery-2.1.3.min.js",
        "myscript.js"
      ]
    },
    {
      "matches": ["http://www.nyaa.se/*"],
      "js": ["sources/external/jquery-2.1.3.min.js"]
    }
  ],
  "background": {
    "scripts": [
      "sources/external/jquery-2.1.3.min.js",
      "background.js"
    ]
  },
  "permissions": [
    "http://www.nyaa.se/",
    "http://www.fansubs.ru/",
    "declarativeContent",
    "storage"
  ],
  "web_accessible_resources": ["*"]
}
